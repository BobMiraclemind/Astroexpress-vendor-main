<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".WalletActivity">



    <ImageView
        android:background="@drawable/walletlogo"
        android:id="@+id/imgwallet"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_below="@id/imgwallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Balance Amount"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/walletb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Rs 0.00"
        android:textColor="@color/black"
        android:layout_below="@id/textView1"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/taxTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/walletb"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="Tax Total" />

    <TextView
        android:id="@+id/taxTotalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taxTotal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Rs 0.0" />


</RelativeLayout>
</ScrollView>