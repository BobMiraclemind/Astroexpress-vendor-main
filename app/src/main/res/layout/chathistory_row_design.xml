<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:elevation="6dp"
    android:background="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">

        <TextView
            android:id="@+id/name"
            android:textColor="@color/black"
            android:text="User Name : "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="#FF03DAC5"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@id/name"
            android:id="@+id/dname"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Chat Time (in mins) : "
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_below="@+id/t1"
            android:textStyle="bold"
            android:textColor="#61B329"
            android:text="00"
            android:textSize="17dp" />


        <TextView
            android:layout_below="@id/dname"
            android:id="@+id/type"
            android:text="Client Paid  : "
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:textStyle="bold"
            android:textColor="#61B329"
            android:layout_below="@+id/t2"
            android:text="00"
            android:textSize="17dp" />

        <TextView
            android:layout_below="@id/type"
            android:id="@+id/t9"
            android:text="Your Earnings : "
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t7"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:textStyle="bold"
            android:textColor="#61B329"
            android:layout_below="@+id/t3"
            android:text="00"
            android:textSize="17dp" />

        <TextView
            android:layout_below="@id/t9"
            android:layout_marginTop="6dp"
            android:id="@+id/india"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="Admin Share (50%) : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t4"
            android:layout_marginTop="6dp"
            android:textColor="#FF0000"
            android:layout_toRightOf="@id/india"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/t7"
            android:text="₹ "
            android:textSize="14dp" />




        <TextView
            android:layout_below="@id/t9"
            android:id="@+id/share"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/t4"
            android:text="TDS (7.5%) : "
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t5"
            android:layout_marginTop="6dp"
            android:textColor="#FF0000"
            android:layout_toRightOf="@id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/t9"
            android:text="₹ "
            android:textSize="14dp"/>



        <TextView
            android:layout_below="@id/india"
            android:layout_marginTop="6dp"
            android:id="@+id/pays"
            android:textColor="@color/black"
            android:text="Payment Gateway Charge (1.25%) : "
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t6"
            android:layout_marginTop="6dp"
            android:textColor="#FF0000"
            android:layout_toRightOf="@id/pays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/india"
            android:text="₹ "
            android:textSize="14dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>